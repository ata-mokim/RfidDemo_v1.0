<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skylark Project (V3.01.20200226_01)" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:src="@drawable/alientechback" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:src="@drawable/rfid111" />

            <Button
                android:id="@+id/btn_rfid"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/inventory_rfid" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:src="@drawable/barcode5121" />

            <Button
                android:id="@+id/btn_barcode"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/inventory_barcode" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_inventory" />

            <Button
                android:id="@+id/btn_readmemory"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Read Memory" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_write" />

            <Button
                android:id="@+id/btn_writememory"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Write Memory" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_lock" />

            <Button
                android:id="@+id/btn_lockmemory"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Lock Memory" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_option" />

            <Button
                android:id="@+id/btn_selectionmask"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Selection Mask" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="30dip"
            android:background="@color/Button_G"
            android:text="EXIT"
            android:textColor="@color/white" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/alientechcombinelogo" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/white" />

</LinearLayout>